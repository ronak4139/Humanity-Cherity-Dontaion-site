@{
    Layout = null; // Remove layout for this view
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment Success</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body text-center">
                        <h2 class="card-title">Payment Successful!</h2>
                        <p class="card-text">Thank you for your donation.</p>
                        <p class="card-text">You will be redirected to the donation page shortly.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Automatically redirect after 3 seconds
        setTimeout(function () {
            window.location.href = '@Url.Action("DonationNow", "UserControlller")'; // Change to your donation page URL
        }, 3000);
    </script>
</body>
</html>
